<!-- res/drawable/custom_radio_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/cyan_mint"/>
            <stroke android:width="10dp" android:color="@color/black" /> <!-- Outline color when checked -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
            <stroke android:width="3dp" android:color="@color/black"/> <!-- Outline color when unchecked -->
        </shape>
    </item>
</selector>