<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="22dp"
    app:cardBackgroundColor="#00CC0000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bgadddialouge"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:text="Add Product"
                android:textColor="@color/black"
                android:textSize="25sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>


        <EditText
            android:id="@+id/productName"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginStart="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="55dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:background="@drawable/txtboxoutlineblack"
            android:drawableLeft="@drawable/ic_productnamesvg"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Name"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/productPrice"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginStart="55dp"
            android:inputType="numberDecimal"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="55dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:background="@drawable/txtboxoutlineblack"
            android:drawableLeft="@drawable/ic_pesosignsvg"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Price"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/productQTY"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginStart="55dp"
            android:inputType="number"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="55dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:background="@drawable/txtboxoutlineblack"
            android:drawableLeft="@drawable/ic_boxesqtysvg"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Stock QTY"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp">
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/Meals"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:buttonTint="@color/black"
               />
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Meals"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/Snacks"
                android:buttonTint="@color/black"
                android:layout_width="27dp"
                android:layout_height="27dp" />
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Snacks"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imageProduct"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="70dp"
                android:background="@color/white_cards_bg"
                android:src="@drawable/ic_picplaceholder" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <FrameLayout
                android:id="@+id/addImage"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/btnbgaddimg"
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Add Image"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/addProduct"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btnaddstockbg"
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Add Product"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
            </FrameLayout>

        </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>