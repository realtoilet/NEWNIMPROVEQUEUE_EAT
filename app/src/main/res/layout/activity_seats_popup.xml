<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".SeatsPopup">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/roundedrectangle2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a Seat"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:textSize="35sp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/blobright"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/blobleft"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"/>



    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/seatSelectorContainer"
        android:layout_width="350dp"
        android:layout_height="510dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
       >

            
        <androidx.cardview.widget.CardView
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            android:id="@+id/iv1"
            android:layout_marginRight="10dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/cyan_mint"
                />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            android:id="@+id/iv2"
            android:layout_marginRight="10dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/cyan_mint"
                />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            android:id="@+id/iv3"
            android:layout_marginRight="10dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/cyan_mint"
                />

        </androidx.cardview.widget.CardView>



    </LinearLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Cancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/btnround"
        android:text="Cancel"
        android:textColor="@color/white"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Proceed"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/btnround"
        android:text="Proceed"
        android:textColor="@color/white"
        />



</RelativeLayout>