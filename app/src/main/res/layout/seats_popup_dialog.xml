<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="22dp"
    app:cardBackgroundColor="#00CC0000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="710dp"
        android:background="@drawable/bg_seats_dialog">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bg_card_cyan"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Choose a Seat"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp2"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_next"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="38dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_next"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btnround"
            android:text="CHECKOUT"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/prev"
            android:layout_width="84dp"
            android:layout_height="44dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="527dp"
            android:layout_marginBottom="66dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/baseline_keyboard_double_arrow_left_24" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="88dp"
            android:layout_height="39dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="526dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="67dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/baseline_keyboard_double_arrow_right_24" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>